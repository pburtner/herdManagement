<% layout('layouts/boilerplate') %>

<h1 class="display-1 text-center"><%= horse.name %></h1>
<div class="row">
    <div class="col-6 offset-md-2 horse-img">
        <img src="/images/horse.jpg" class="img-fluid" alt="...">
    </div>
    <div class="col-6">
        <div class="mb-2">
            <label class="display-label">Registered Name: </label>&nbsp;<span><%= horse.registeredName %></span>
        </div>
        <div class="mb-2">
            <label class="display-label">Age: </label>&nbsp;<span><%= horse.age %> years</span>
        </div>
        <div class="mb-2">
            <label class="display-label">Breed: </label>&nbsp;<span><%= horse.breed %></span>
        </div>
        <div class="mb-2">
            <label class="display-label">Gender: </label>&nbsp;<span><%= horse.gender %></span>
        </div>
    </div>
</div>
<div class="row">
    <div class="col offset-md-2">
        <a class="btn btn-primary" href="/horses">Return to Horses List</a>
        <a class="btn btn-primary" href="/horses/<%= horse._id %>/edit">Edit <%= horse.name %></a>
        <form style="display: inline; margin: 0; padding: 0;" action="/horses/<%=horse._id%>?_method=DELETE" method="POST">
            <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete <%= horse.name %>?');">Delete</button>
        </form>
    </div>
</div>